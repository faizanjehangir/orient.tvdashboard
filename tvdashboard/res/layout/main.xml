<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.orient.orientlauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg" >

    <RelativeLayout
        android:id="@+id/PieControlLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:background="@null" >

        <com.digitalaria.gama.wheel.Wheel
            android:id="@+id/wheel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="-150dp" >
        </com.digitalaria.gama.wheel.Wheel>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/PieControlLayoutHandle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/openLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open" >
        </Button>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ContentLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="80dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/TvLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="400dp"
                android:background="#FFFFFF" />

            <Button
                android:id="@+id/HDMIBtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/hdmi1_btn_style" />

            <Button
                android:id="@+id/HDMIBtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/hdmi2_btn_style" />

            <Button
                android:id="@+id/USBBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/usb_btn_style" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/CategoriesLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/ContentFragmentLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
                <HorizontalScrollView 
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    
                </HorizontalScrollView>
                
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>