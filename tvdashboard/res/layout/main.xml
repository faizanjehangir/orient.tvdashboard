<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.orient.orientlauncher"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/PieControlLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@null" >

            <com.digitalaria.gama.wheel.Wheel
                android:id="@+id/wheel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="-150dp" >
            </com.digitalaria.gama.wheel.Wheel>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <Button
                android:id="@+id/openLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Left" >
            </Button>

            <Button
                android:id="@+id/openRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open Right" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/AddSourceLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@drawable/addsource_dropshadow"
            android:orientation="vertical" >
            
            

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <Button
                    android:id="@+id/returnBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/return_btn_style" />
            </RelativeLayout>
            
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_step1"
                android:layout_margin="15dp"/>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" >

                <Button
                    android:id="@+id/btn_browse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@drawable/browse_btn_style" />

                <EditText
                    android:id="@+id/text_browse"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:layout_toLeftOf="@id/btn_browse"
                    android:enabled="false"
                    android:padding="11dp"
                    android:hint="ADD SOURCE"
                    android:singleLine="true"
                    android:textColor="#6d6d6d"
                    android:background="@drawable/addsource_edittext_style" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/DirectoryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="0.7"
                android:visibility="gone" >

                <fragment
                    android:id="@+id/directoryFragment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    class="com.orient.orientlauncher.SelectedDirectoryListFragment" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp" >

                <Button
                    android:id="@+id/okBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ok_btn_style"
                    android:visibility="gone" />
            </RelativeLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.3" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/text_source_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/addsource_edittext_style"
                        android:hint="NAME SOURCE"
                        android:padding="11dp"
                        android:singleLine="true"
                        android:textColor="#6d6d6d" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/text_step2" />

                    <Spinner
                        android:id="@+id/spinner_source"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:hint="DEFINE SOURCE" />

                    <Spinner
                        android:id="@+id/spinner_database"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp" >

                        <Button
                            android:id="@+id/btn_add_source"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/addsource_btn_style" />
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>